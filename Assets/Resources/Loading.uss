.loading-root {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    justify-content: center;
    align-items: center;
    display: flex;
    background-color: rgba(0, 0, 0, 0.5);
}

.loading-label {
    padding: 10px 20px;
    font-size: 18px;
    background-color: var(--color-white-1);
    border-radius: 5px;
}

